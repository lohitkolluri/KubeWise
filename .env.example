# Gemini API settings
GEMINI_API_KEY=your_gemini_api_key
GEMINI_AUTO_VERIFICATION=true
GEMINI_AUTO_ANALYSIS=true

# Application settings
LOG_LEVEL=INFO
WORKER_SLEEP_INTERVAL_SECONDS=15
DEFAULT_REMEDIATION_MODE=AUTO

# Prometheus settings
PROMETHEUS_PORT=9091
PROMETHEUS_URL=http://localhost:9090

# Remediation control settings
ADMIN_BYPASS=true
DRY_RUN=true

# KubeWise Configuration

# Operation mode (learning, assisted, autonomous)
KUBEWISE_MODE=autonomous

# Gemini AI settings
GEMINI_MODEL=gemini-1.5-pro

# Prometheus connection
PROMETHEUS_SCRAPE_INTERVAL_SECONDS=30

# Monitoring settings
ANOMALY_DETECTION_THRESHOLD=0.8
ANOMALY_METRIC_WINDOW_SECONDS=3600

# Remediation settings
AUTO_REMEDIATION_ENABLED=true
AUTO_REMEDIATION_MODE=auto
VERIFICATION_DELAY_SECONDS=60
