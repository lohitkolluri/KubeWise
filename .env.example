# KubeWise Configuration Example
# Copy this file to .env and fill in your actual values.

# MongoDB Atlas connection string
# Example: mongodb+srv://user:password@mycluster.mongodb.net/kubewise_db?retryWrites=true&w=majority
MONGO_URI="mongodb+srv://<username>:<password>@<atlas_cluster_url>/<database_name>?retryWrites=true&w=majority"

# Prometheus server URL
PROM_URL="http://localhost:9090"

# Google Gemini API Key (used by Pydantic-AI)
# Ensure this is kept secret, especially in production (use K8s Secrets)
GEMINI_API_KEY="changeme"

# Anomaly detection threshold (float between 0.0 and 1.0)
# Scores above this value trigger remediation plan generation.
ANOMALY_THRESHOLD="0.8"

# Logging level (e.g., DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# Optional: Specify the Gemini model identifier if different from default in code
# GEMINI_MODEL_ID="google-gla:gemini-2.0-flash" # Default set in code, uncomment to override
