# Kubernetes Configuration
KUBECONFIG_PATH=/root/.kube/config
MONITOR_INTERVAL_SECONDS=60
MONITORED_NAMESPACES=default,kube-system  # Comma-separated list or "*" for all

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-key

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# AI Provider Configuration
AI_PROVIDER=azure  # "azure" or "gemini"

# Azure OpenAI Configuration (if using Azure)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4  # Your deployment name

# Google Gemini Configuration (if using Gemini)
GEMINI_API_KEY=your-gemini-api-key

# SMTP Configuration for Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password-or-app-password
SMTP_USE_TLS=True
ALERT_RECIPIENT_EMAIL=alerts-recipient@example.com
ALERT_SENDER_EMAIL=your-email@gmail.com

# Allowed kubectl Verbs for Remediation
ALLOWED_KUBECTL_VERBS=get,describe,logs  # Add delete,scale etc. if needed, with caution

# API Security
API_KEY=your-secure-api-key-for-remediation
